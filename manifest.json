{
    "name": "Accessibility Chatbox",
    "version": "0.1.0",
    "manifest_version": 3,
    "description": "Personal chatbox assitant using OpenAI Api.",
    "permissions": ["storage", "activeTab", "scripting", "declarativeContent"],
    "background": 
    {
      "service_worker": "background.js"
    },    
    "web_accessible_resources": 
    [
      {
        "resources": 
        [
          "assets/*"
        ],
        "matches": ["<all_urls>"]
      }
    ],
    "action": 
    {
      "default_popup": "popup.html",
      "default_icon": 
      {
        "16": "assets/extensionIcon.png",
        "48": "assets/extensionIcon.png",
        "128": "assets/extensionIcon.png"
      }
    }
}
